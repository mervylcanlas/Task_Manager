<div class = 'edit_task'>
    <div class = 'edit_cat_head'>Edit "<%= @task.title %>"</div>

    <%= form_with model: [@category, @task] do |form| %>
    <div>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
    </div>
    <div>
        <%= form.label :description %><br>
        <%= form.text_area :description %><br>
        <% @task.errors.full_messages_for(:details).each do |message| %>
        <div><%= message %></div>
        <% end %>
    </div>
    <div>
        <%= form.label :deadline %><br>
        <%= form.date_field :deadline %>
        <% @task.errors.full_messages_for(:details).each do |message| %>
        <div><%= message %></div>
        <% end %>
    </div>
    <div class = 'submit'>
        <%= form.submit %>
    </div>
    <% end %>
</div>